{{#partial "body"}}
<div class="container">
<h4>Crear Prenda</h4>
<form action="/guardaropa/prendas" method="post">
 
<div class="form-group col-md-4">
      <label for="tipoPrenda">Tipo de Prenda:</label>
      
      <select id="tipoPrenda" name="tipoDePrenda" class="form-control">
        <option selected>Choose...</option>
      	{{#each tiposDePrenda}}  
        <option value="{{id}}">{{nombre}}</option>
        {{/each}}
      </select>
      
 </div>
<div class="form-group col-md-4">
      <label for="tipoTela">Tipo de Tela:</label>
      <select id="tipoTela" name="tela" class="form-control">
        <option selected>Choose...</option>
       {{#each tiposDeTela}}  
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
 </div>
 <div class="form-group col-md-4">
      <label for="colorPrimario">Color Primario:</label>
      <select id="colorPrimario" name="colorP" class="form-control">
        <option selected>Choose...</option>
       {{#each coloresPrimarios}}  
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
 </div>
 <div class="form-group col-md-4">
      <label for="colorSecundario">Color Secundario:</label>
      <select id="colorSecundario" name="colorS" class="form-control">
        <option selected>Choose...</option>
        {{#each coloresSecundarios}}  
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
 </div>
 <div class="form-group col-md-4">
      <label for="guardaropa">Guardar en guardaropa:</label>
      <select id="guardaropa" name="guardaropa" class="form-control">
        <option selected>Choose...</option>
       {{#each guardaropas}}  
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
 </div>
 <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Crear</button>
    </div>
  </div>
</form>
</div>
{{/partial}}
{{>layout.hbs}}